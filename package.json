{
  "name": "cheftopia",
  "version": "1.0.0",
  "description": "A social network for chefs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run dev --prefix ui",
    "dev": "concurrently \"npm start\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-prebuild": "npm install -g @angular/cli @angular-devkit/build-angular",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix ui && npm run build --prefix ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaronsalud/Cheftopia-Angular.git"
  },
  "author": "Aaron Mikhail Salud",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aaronsalud/Cheftopia-Angular/issues"
  },
  "homepage": "https://github.com/aaronsalud/Cheftopia-Angular#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.1",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "validator": "^10.6.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}
